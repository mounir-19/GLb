{
    "info": {
        "name": "Algerie Telecom API",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "variable": [
        {
            "key": "baseUrl",
            "value": "http://localhost:5000/api"
        },
        {
            "key": "token",
            "value": ""
        }
    ],
    "item": [
        {
            "name": "Health Check",
            "request": {
                "method": "GET",
                "header": [],
                "url": {
                    "raw": "http://localhost:5000/health",
                    "protocol": "http",
                    "host": [
                        "localhost"
                    ],
                    "port": "5000",
                    "path": [
                        "health"
                    ]
                }
            }
        },
        {
            "name": "Login",
            "event": [
                {
                    "listen": "test",
                    "script": {
                        "exec": [
                            "if (pm.response.code === 200) {",
                            "    var jsonData = pm.response.json();",
                            "    pm.collectionVariables.set('token', jsonData.token);",
                            "}"
                        ]
                    }
                }
            ],
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n  \"username\": \"director01\",\n  \"password\": \"password123\"\n}"
                },
                "url": {
                    "raw": "{{baseUrl}}/auth/login",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "auth",
                        "login"
                    ]
                }
            }
        },
        {
            "name": "Get All Employees",
            "request": {
                "method": "GET",
                "header": [
                    {
                        "key": "Authorization",
                        "value": "Bearer {{token}}"
                    }
                ],
                "url": {
                    "raw": "{{baseUrl}}/employees",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "employees"
                    ]
                }
            }
        },
        {
            "name": "Get All Articles",
            "request": {
                "method": "GET",
                "header": [
                    {
                        "key": "Authorization",
                        "value": "Bearer {{token}}"
                    }
                ],
                "url": {
                    "raw": "{{baseUrl}}/articles",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "articles"
                    ]
                }
            }
        },
        {
            "name": "Get Warehouse Orders",
            "request": {
                "method": "GET",
                "header": [
                    {
                        "key": "Authorization",
                        "value": "Bearer {{token}}"
                    }
                ],
                "url": {
                    "raw": "{{baseUrl}}/warehouse/orders",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "warehouse",
                        "orders"
                    ]
                }
            }
        },
        {
            "name": "Get All Reports",
            "request": {
                "method": "GET",
                "header": [
                    {
                        "key": "Authorization",
                        "value": "Bearer {{token}}"
                    }
                ],
                "url": {
                    "raw": "{{baseUrl}}/reports",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "reports"
                    ]
                }
            }
        },
        {
            "name": "Get Sales Data",
            "request": {
                "method": "GET",
                "header": [
                    {
                        "key": "Authorization",
                        "value": "Bearer {{token}}"
                    }
                ],
                "url": {
                    "raw": "{{baseUrl}}/sales",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "sales"
                    ]
                }
            }
        }
    ]
}